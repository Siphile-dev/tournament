@model IEnumerable<TournamentsWebApplication.Models.Tournament>

@{
    ViewData["Title"] = "Index";
}


<h1>Tournaments</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TournamentName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TournamentName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TournamentID">Edit</a> |
                    @*<a asp-action="Details" asp-route-id="@item.TournamentID">Details</a> |*@
                    <a  asp-controller="Events"  asp-action="Index" asp-route-id="@item.TournamentID">Events</a> |
                    <a asp-action="Delete" asp-route-id="@item.TournamentID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
